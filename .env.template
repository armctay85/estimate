# EstiMate App Environment Variables
# This file contains all the required environment variables for the application
# Copy this file to .env and fill in your actual values

# Database Configuration (PostgreSQL)
DATABASE_URL=your_database_url_here
PGDATABASE=your_database_name
PGHOST=your_database_host
PGPASSWORD=your_database_password
PGPORT=5432
PGUSER=your_database_user

# Autodesk Forge API
FORGE_CLIENT_ID=your_forge_client_id
FORGE_CLIENT_SECRET=your_forge_client_secret

# AI Services
OPENAI_API_KEY=your_openai_api_key
XAI_API_KEY=your_xai_api_key

# Stripe Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key

# Session Management
SESSION_SECRET=your_session_secret

# Replit Configuration (Auto-generated)
REPLIT_DOMAINS=your_replit_domains
REPL_ID=your_repl_id

# Environment
NODE_ENV=development